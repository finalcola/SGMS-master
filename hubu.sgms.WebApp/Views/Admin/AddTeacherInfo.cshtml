@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
    <link rel="stylesheet" href="~/Content/admin/style.default.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/admin/pikaday.css" />
    <script src="~/Scripts/Course/pikaday.js"></script>
    <script src="~/Scripts/Course/jquery.min.js"></script>
    <script src="~/Scripts/Course/sweetalert2.min.js"></script>
    <link rel="stylesheet" href="~/Content/admin/sweetalert2.min.css">
</head>
<body class="withvernav">
    <div style="height:50px;background-color:#31425D;text-align:center" align="Center">
        <h1 vertical-align="middle" style="line-height:45px ">添加教师信息</h1>
    </div>
    <!--form表单中固定有submit按钮，onsubmit表示在提交时所做的js判断-->
    <form id="formid" class="stdform stdform2" action="/Admin/SubmitAddTeacherInfo" method="post">
        <p>
            <label>姓名</label>
            <span class="field"><input type="text" name="teacherName" id="teacherName" class="longinput" style="width:200px;" /></span>
        </p>
        <p>
            <label>性别</label>
            <span class="field" style="width:400px;">
                <select id="teacherSex" name="teacherSex">
                    <option value="" style="display: none;" disabled selected>性别</option>
                    <option value="男">男</option>
                    <option value="女">女</option>
                    <option value="未知">未知</option>
                </select>
            </span>
        </p>
        <p>
            <label>卡号</label>
            <span class="field"><input type="text" name="teacherIDCard" id="teacherIDCard" class="longinput" style="width:200px;" /></span>
        </p>
        <p>
            <label>年龄</label>
            <span class="field"><input type="text" name="teacherAge" id="teacherAge" class="longinput" style="width:200px;" /></span>
        </p>
        <p>
            <label>教师所属学院</label>
            <span class="field" style="width:700px;">
                <select name="teacherDepartment" id="teacherDepartment">
                    <option value="" style="display: none;" disabled selected>所属学院</option>
                    <option value="文学院">文学院</option>
                    <option value="新闻传播学院">新闻传播学院</option>
                    <option value="商学院">商学院</option>
                    <option value="政法与公共管理学院">政法与公共管理学院</option>
                    <option value="外国语学院">外国语学院</option>
                    <option value="历史文化学院">历史文化学院</option>
                    <option value="教育学院">教育学院</option>
                    <option value="哲学学院">哲学学院</option>
                    <option value="马克思主义学院">马克思主义学院</option>
                    <option value="数学与统计学学院">数学与统计学学院</option>
                    <option value="物理与电子科学学院">物理与电子科学学院</option>
                    <option value="化学化工学院">化学化工学院</option>
                    <option value="生命科学学院">生命科学学院</option>
                    <option value="资源环境学院">资源环境学院</option>
                    <option value="计算机与信息工程学院">计算机与信息工程学院</option>
                    <option value="材料科学与工程学院">材料科学与工程学院</option>
                    <option value="艺术学院">艺术学院</option>
                    <option value="体育学院">体育学院</option>
                    <option value="通识教育学院">通识教育学院</option>
                    <option value="楚才学院">楚才学院</option>
                    <option value="国际教育学院">国际教育学院</option>
                </select>
            </span>
        </p>
        <p>
            <label>教师Title</label>
            <span class="field"><input type="text" name="teacherTitle" id="teacherTitle" class="longinput" style="width:200px;" /></span>
        </p>
        <p>
            <label>民族</label>
            <span class="field" style="width:400px;">
                <select name="teacherNative" id="teacherNative">
                    <option value="" style="display: none;" disabled selected>民族</option>
                    <option value="汉">汉</option>
                    <option value="土家">土家</option>
                    <option value="苗">苗</option>
                    <option value="其他">其他</option>
                </select>
            </span>
        </p>
        <p>
            <label>出身地地址</label>
            <span class="field"><input type="text" name="teacherBirthplace" id="teacherBirthplace" class="longinput" style="width:200px;" /></span>
        </p>

        <!--上传照片-->

        <p>
            <label>政治面貌</label>
            <span class="field" style="width:400px;">
                <select name="teacherPoliticsstatus" id="teacherPoliticsstatus">
                    <option value="" style="display: none;" disabled selected>政治面貌</option>
                    <option value="群众">群众</option>
                    <option value="中共党员">中共党员</option>
                    <option value="其他">其他</option>
                </select>
            </span>
        </p>
        <p>
            <label>教课时间</label>
            <span class="field" style="width:400px;">
                <select name="teacherTeachingtime" id="teacherTeachingtime">
                    <option value="" style="display: none;" disabled selected>教课时间</option>
                    <option value="5年以下">5年以下</option>
                    <option value="5-10年">5-10年</option>
                    <option value="10-20年">10-20年</option>
                    <option value="20年以上">20年以上</option>
                </select>
            </span>
        </p>
        <p>
            <label>联系方式</label>
            <span class="field"><input type="text" name="teacherContact" id="teacherContact" class="longinput" style="width:200px;" /></span>
        </p>
        <p>
            <label>个人描述</label>
            <span class="field"><input type="text" name="teacherOther" id="teacherOther" class="longinput" style="width:200px;" /></span>
        </p>
        <p>
            <label>状态</label>
            <span class="field" style="width:400px;">
                <select name="teacherStatus" id="teacherStatus">
                    <option value="" style="display: none;" disabled selected>状态</option>
                    <option value="1">正常</option>
                    <option value="2">休假</option>
                    <option value="3">退休</option>
                </select>
            </span>
        </p>
        <div class="showcase sweet" style="height:50px;background-color:white" align="Center">
            <button class="submit" align="Center" style="width:120px;margin-top: 10px;">添加教师信息</button>
        </div>
    </form>

    <script>
        $('.showcase.sweet button').on('click', function () {
            var teacherName = document.getElementById("teacherName").value;
            var teacherSex = document.getElementById("teacherSex").value;
            var teacherIDCard = document.getElementById("teacherIDCard").value;
            var teacherAge = document.getElementById("teacherAge").value;
            var teacherDepartment = document.getElementById("teacherDepartment").value;
            var teacherTitle = document.getElementById("teacherTitle").value;
            var teacherNative = document.getElementById("teacherNative").value;
            var teacherBirthplace = document.getElementById("teacherBirthplace").value;
            var teacherPoliticsstatus = document.getElementById("teacherPoliticsstatus").value;
            var teacherTeachingtime = document.getElementById("teacherTeachingtime").value;
            var teacherContact = document.getElementById("teacherContact").value;
            var teacherOther = document.getElementById("teacherTeachingtime").value;
            var teacherStatus = document.getElementById("teacherStatus").value;
            // teacherName teacherSex teacherIDCard teacherAge teacherDepartment teacherTitle teacherNative teacherBirthplace teacherPoliticsstatus teacherTeachingtime teacherContact teacherOther teacherStatus
            if (teacherName == '' || teacherSex == '' || teacherIDCard == '' || teacherAge == '' || teacherNative == '' || teacherDepartment == '' || teacherTitle == ''
                || teacherBirthplace == '' || teacherPoliticsstatus == '' || teacherTeachingtime == '' || teacherContact == '' || teacherOther == '' || teacherStatus == '') {
                swal('提交错误', '请检查信息是否完整', 'error');
                return false;
            } else {
                document.getElementById("formid").submit();
            }
  	    });
    </script>
</body>
</html>