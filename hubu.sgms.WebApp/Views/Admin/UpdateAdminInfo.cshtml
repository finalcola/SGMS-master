@{
    Layout = null;
}
@using System.Data;
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Content/admin/style.default.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/admin/pikaday.css" />
    <script src="~/Scripts/Course/pikaday.js"></script>
    <script src="~/Scripts/Course/sweetalert2.min.js"></script>
    <link rel="stylesheet" href="~/Content/admin/sweetalert2.min.css">
    <title>修改个人信息</title>
</head>
<body class="withvernav">
    <div style="height:50px;background-color:#31425D;text-align:center" align="Center">
        <h1 vertical-align="middle" style="line-height:45px ">修改个人信息</h1>
    </div><!--contenttitle-->
    <form id="formid" class="stdform stdform2" action="/Admin/SubmitUpdateAdminInfo" method="post" onsubmit="return submitInfo()">
        <p>
            <label>账户ID</label>
            <span class="field"><input value="@ViewData["administrator_id"]" type="text" name="administrator_id" id="administrator_id" class="longinput" readonly="readonly" style="width:200px;" /></span>

        </p>
        <p>
            <label>姓名</label>
            <span class="field"><input value="@ViewData["administrator_name"]" type="text" name="administrator_name" id="administrator_name" class="longinput" style="width:200px;" /></span>
        </p>
        <p>
            <label>性别</label>
            <span class="field" style="width:400px;">
                <select value="@ViewData["administratort_sex"]" id="administrator_sex" name="administrator_sex">
                    <option value="" style="display: none;" disabled selected>性别</option>
                    <option value="男">男</option>
                    <option value="女">女</option>
                    <option value="未知">未知</option>
                </select>
            </span>
        </p>
        <p>
            <label>卡号</label>
            <span class="field"><input value="@ViewData["administrator_id_card"]" type="text" name="administrator_id_card" id="administrator_id_card" class="longinput" readonly="readonly" style="width:200px;" /></span>
        </p>
        <p>
            <label>联系方式</label>
            <span class="field">
                <input value="@ViewData["administrator_contact"]" id="administrator_contact" name="administrator_contact" type="text" style="width:200px;" />
            </span>
        </p>
        <p>
            <label>所属部门</label>
            <span class="field" style="width:600px;">
                <select value="@ViewData["administrator_department"]" id="administrator_department" name="administrator_department">
                    <option value="0" style="display: none;" disabled selected>所属院系</option>
                    <option value="文学院">文学院</option>
                    <option value="新闻传播学院">新闻传播学院</option>
                    <option value="商学院">商学院</option>
                    <option value="政法与公共管理学院">政法与公共管理学院</option>
                    <option value="外国语学院">外国语学院</option>
                    <option value="历史文化学院">历史文化学院</option>
                    <option value="教育学院">教育学院</option>
                    <option value="哲学学院">哲学学院</option>
                    <option value="马克思主义学院">马克思主义学院</option>
                    <option value="数学与统计学学院">数学与统计学学院</option>
                    <option value="物理与电子科学学院">物理与电子科学学院</option>
                    <option value="化学化工学院">化学化工学院</option>
                    <option value="生命科学学院">生命科学学院</option>
                    <option value="资源环境学院">资源环境学院</option>
                    <option value="计算机与信息工程学院">计算机与信息工程学院</option>
                    <option value="材料科学与工程学院">材料科学与工程学院</option>
                    <option value="艺术学院">艺术学院</option>
                    <option value="体育学院">体育学院</option>
                    <option value="通识教育学院">通识教育学院</option>
                    <option value="楚才学院">楚才学院</option>
                    <option value="国际教育学院">国际教育学院</option>
                </select>
            </span>
        </p>
        <p>
            <label>其他</label>
            <span class="field"><input value="@ViewData["administrator_other"]" type="text" name="administrator_other" id="administrator_other" class="longinput" style="width:400px;" /></span>
        </p>
        <p>
            <label>状态</label>
            <span class="field" style="width:400px;">
                <select value="@ViewData["status"]" name="status" id="status">
                    <option value="" style="display: none;" disabled selected>状态</option>
                    <option value="1">正常</option>
                    <option value="2">休假</option>
                    <option value="3">退休</option>
                </select>
            </span>
        </p>
        <div style="height:50px;background-color:white" align="Center">
            <button class="submit" align="Center" style="width:120px;margin-top: 10px;">修改个人信息</button>
        </div>
    </form>
    <script>
        function submitInfo() {
            var administrator_id = document.getElementById("administrator_id").value;
            var administrator_name = document.getElementById("administrator_name").value;
            var administrator_id_card = document.getElementById("administrator_id_card").value;
            var administrator_contact = document.getElementById("administrator_contact").value;
            var administrator_department = document.getElementById("administrator_department").value;
            var administrator_other = document.getElementById("administrator_other").value;
            var status = document.getElementById("status").value;
            var administrator_sex = document.getElementById("administrator_sex").value;

            if (administrator_id == '' || administrator_name == '' || administrator_id_card == '' || administrator_contact == '' || administrator_department == '' || administrator_other == '' || administrator_sex == '' || status == '') {
                swal('提交错误', '请检查信息是否完整', 'error');
                return false;
            } else {
                document.getElementById("formid").submit();
            }
        }
    </script>
</body>
</html>
