
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/Scripts/layui/css/layui.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/layui/layui.js"></script>
    <title></title>
    <style>
        .z_select {
            margin-top: 20px;
            margin-bottom: 15px;
        }

        .myselect {
            float: left;
            width: 12%;
        }

        .mylabel {
            float: left;
            margin-left: 20px;
        }

        .mybtn {
            margin-left: 30px;
            width: 100px;
        }

        .z_search {
            float: left;
            width: 17%;
            margin-left: 15px;
        }

        .container-flud {
            width: 94%;
            margin: 0 auto;
        }
        #details tr td{
            cursor:pointer;
        }
    </style>
</head>
<body>
 
    <div class="container-flud">
        <div class="layui-form">
            <table class="layui-table" align="center">
                <colgroup>
                    <col width="10%">
                    <col width="10%">
                    <col width="10%">
                    <col width="20%">
                    <col width="20%">
                    <col width="10%">
                    <col width="10%">
                    <col width="10%">
                </colgroup>
                <thead>
                    <tr>
                        <th>课程编号</th>
                        <th>课程名称</th>
                        <th>授课班级</th>
                        <th>授课学院</th>
                        <th>授课专业</th>
                        <th>上课教室</th>
                        <th>课程学分</th>
                        <th>状态</th>
                    </tr>
                </thead>
                <tbody id="details">
                    
                </tbody>
            </table>
        </div>
    </div>
    <script>

        $(function () {
            $.ajax({         
                url: '/Teacher/SelectCourse',
                type: 'post',
                async: false,
                success: function (result) {
                    //alert(result);
                    var list = "";
                    var returnData = result.courseList;
                    $.each(returnData, function (i, data) {
                        list += "<tr onclick=\"jumpToScore(" + data["course_id"] + ")\">";
                        list += "<td>" + data["course_id"] + "</td>";
                        list += "<td>" + data["course_name"] + "</td>";
                        list += "<td>" + data["_class"] + "</td>";
                        list += "<td>" + data["department"] + "</td>";
                        list += "<td>" + data["major"] + "</td>";
                        list += "<td>" + data["classroom_id"] + "</td>";
                        list += "<td>" + data["course_credit"] + "</td>";
                        list += "<td>" + data["status"] + "</td>";
                        list += "</tr>";
                    });
                    $("#details").html(list);
                },
                error: function () {
                    alert("网络连接出错");
                }
            });
        })

        function jumpToScore(courseid) {
            window.location.href = "/Teacher/TeacherCheckScore?courseid=" + courseid;
        }
    </script>
</body>
</html>
